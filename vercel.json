{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/spa",
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/[[...route]].ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  }
}
